<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/horario_lineal_layout"
    android:orientation="horizontal"
    android:layout_marginTop="3dp"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    android:background="#fafafa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/left_lineD"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="#F50057"/>

    <RelativeLayout
        android:id="@+id/horario_relative_layout"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            app:cardBackgroundColor="#EC407A">

            <TextView
                android:id="@+id/hourD"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="15:00h" />

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/lastD"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true" >

            <View
                android:layout_centerHorizontal="true"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E0E0E0" />

            <com.onelio.connectu.CustomViews.VerticalTextView
                android:id="@+id/lastTD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="#fafafa"
                android:fontFamily="sans-serif"
                android:gravity="bottom"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingEnd="6dp"
                android:paddingStart="6dp"
                android:text="2 hours"
                android:textColor="#9E9E9E"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingEnd="34dp"
            android:paddingStart="32dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:ellipsize="end"
                android:fontFamily="serif"
                android:maxLines="2"
                android:id="@+id/titleD"
                android:text="Title test"
                android:textColor="#424242"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:id="@+id/subtitleD"
                android:text="Subtitle test"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:fontFamily="serif"
                android:maxLines="5"
                android:id="@+id/textD"
                android:text="Content test of new to see"
                android:textColor="#616161" />

            <LinearLayout
                android:id="@+id/llLocD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_location_grey"/>

                <TextView
                    android:id="@+id/locD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#757575"
                    android:text="At A2/A01"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_alarm_grey"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:maxLines="1"
                    android:id="@+id/instD"
                    android:ellipsize="end"
                    android:textColor="#757575"
                    android:text="In 1 hour"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>